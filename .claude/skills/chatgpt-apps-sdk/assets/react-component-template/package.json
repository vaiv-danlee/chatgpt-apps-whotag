{
  "name": "chatgpt-app-component",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "esbuild src/component.tsx --bundle --format=esm --outfile=dist/component.js --loader:.css=text",
    "build:css": "cp src/styles.css dist/component.css",
    "build:all": "npm run build && npm run build:css",
    "watch": "esbuild src/component.tsx --bundle --format=esm --outfile=dist/component.js --watch"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.19.0",
    "typescript": "^5.3.0"
  }
}
